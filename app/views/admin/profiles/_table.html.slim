table.scroll.stack
  thead
    tr
      th width='20%' ImiÄ™ i nazwisko
      th width='20%' E-mail
      th width='10%' Telefon
      th width='5%' Pesel
      th width='15%' Miasto
      th width='10%' Sekcje
      th width='15%'
  tbody
    - profiles.each_with_index do |profile, i|
      tr
        td
          b = "#{profile.first_name} #{profile.last_name}"
        td = profile.email
        td = profile.phone
        td = profile.pesel
        td = profile.city
        td = profile.sections
        td
          - if profile.accepted?
            = link_to 'Zobacz', admin_profile_path(profile.id)
          - else
            = link_to 'Akceptuj', admin_profile_path(profile.id)

