= form_for @course, as: :course, url: supplementary_course_path(@course.id), html: { class: 'js-course-form' } do |f|
  = render 'form', f: f

  .row
    .large-6.columns
      = f.submit t('.submit'), class: 'button expanded large success'
    .large-6.columns
      = link_to t('.back'), supplementary_course_path(@course.id), class: 'secondary button large expanded'
