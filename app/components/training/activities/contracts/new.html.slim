= form_for @contract, as: :contract, url: activities_contracts_path do |f|
  .row
    .large-12.columns
      - if @errors
        .callout.alert
          ul
            - @errors.each do |error|
              li= error.last.to_sentence

  = render 'form', f: f

  .row
    .large-6.columns
      = f.submit 'Dodaj kontrakt', class: 'button expanded large success'

    .large-6.columns
      = link_to 'wróć do poprzedniej strony', activities_contracts_path, class: 'button expanded large warning'
