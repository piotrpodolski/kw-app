.row
  .large-12.columns
    table.stack
      thead
        tr
          th ID
          th Opis
          th Koszt
          th Kto?
          th Płatność
      tbody
        - @donations.each do |donation|
          tr
            td = donation.id
            td = donation.description
            td = donation.cost
            td
              - if donation.user_id
                = donation.user.display_name
              - else
                = donation.display_name
            td
              - if donation.payment
                .label= donation.payment&.state
