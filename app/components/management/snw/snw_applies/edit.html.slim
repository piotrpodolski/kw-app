.row
  .large-12.columns style='text-align: center'
    h4 Zgłoszenie do Sekcji Narciarstwa Wysokogórskiego

.row
  .large-12.columns
    - if @snw_apply.errors.any?
      .callout.alert
        ul
          - @snw_apply.errors.messages.each do |error|
            li= error&.last&.to_sentence

= form_for @snw_apply, url: snw_apply_path(@snw_apply.kw_id), as: :snw_apply do |f|
  = render 'form', f: f

  .row
    .large-12.columns
      = f.submit 'Edytuj zgłoszenie', class: 'button primary large expanded'
