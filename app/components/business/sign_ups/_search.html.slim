= search_form_for @q, url: business_sign_ups_path, class: 'js-send-on-enter' do |f|
  .row
    .large-6.columns
      = f.label :name_or_email_or_phone_or_alternative_email_cont, 'Nazwa, email, telefon'
      = f.search_field :name_or_email_or_phone_or_alternative_email_cont

    .large-2.columns
      br
      = link_to 'Historia', '/courses/history', class:'hollow alert button expanded'

    .large-2.columns
      br
      = link_to 'Dodaj kurs', new_course_path, class: 'button success expanded'

    .large-2.columns
      br
      = f.submit 'Szukaj', class: 'button expanded'
