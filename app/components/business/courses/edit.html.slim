.row
  .large-12.columns
    - if @course.errors.any?
      .callout.alert
        ul.circle
          - @course.errors.full_messages.each do |message|
            li= message

= form_for @course, as: :course, url: course_path(@course.id) do |f|
  = render 'form', f: f

  .row
    .large-4.columns
      = f.submit 'Zaktualizuj', class: 'button expanded large success'
    .large-4.columns
      = link_to 'zobacz kurs', course_path(@course.id), class: 'warning button large expanded'
    .large-4.columns
      = link_to 'wróć do kursów', courses_path, class: 'secondary button large expanded'
