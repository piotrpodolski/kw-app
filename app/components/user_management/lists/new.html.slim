.row
  .large-12.columns
    h4 =t('.title')

.row
  .large-12.columns
    - if @errors
      .callout.alert
        ul.circle
          - @errors.each do |error|
            li= error

= form_for @list, as: :list, url: profile_lists_path(profile_id: @profile.id) do |f|
  = render 'form', f: f

  .row
    .large-12.columns
      = f.submit t('.send'), class: 'button expanded large success'
